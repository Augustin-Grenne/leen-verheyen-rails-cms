.row
- @news_items.each do |news_item|  
  - if news_item.show
    .col-xs-6
      %article.note
        %h3
          = news_item.title
        - if logged_in? && current_user.admin
          .admin-actions
            = link_to "", edit_news_item_path(news_item), class: "icon icon-pen"
            %span 
              &emsp;|&emsp; 
            %span.delete 
              = link_to "", news_item_path(news_item), method: :delete, data: { confirm: "Are you certain you want to delete this news item?" }, class: "icon icon-bin" 
        %p  
          = news_item.body
        %p 
          %small
            Van:
            = news_item.user.username if news_item.user
            Gemaakt op 
            = news_item.created_at.strftime("%d/%m/%Y").to_s
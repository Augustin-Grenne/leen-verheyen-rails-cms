.row
- @news_items.each do |news_item|  
  - if news_item.show
    .col-xs-6
      %article.note
        %h3
          = news_item.title
        %span.edit 
          = link_to "Bewerken", edit_news_item_path(news_item)
        %span 
          &emsp;|&emsp; 
        %span.delete 
          = link_to "Verwijderen", news_item_path(news_item), method: :delete, data: { confirm: "Are you certain you want to delete this news item?" } 
        %p  
          = news_item.body